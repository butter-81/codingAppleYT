    <body>

        <%- include('nav.html') %>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.7.2/socket.io.js"></script>        
        
        <div>채팅방</div>
        <input id="input1">
        <div id="content"></div>
        <button id="send">서버에 메세지 보내기</button>
        <button id="room1">채팅방 1 입장</button>
        <button id="room1-send">채팅방 1 에서 메세지보내기</button>

        <script>
            var socket = io();

            $('#room1-send').click(function() {
                socket.emit('room1-send', $('#input1').val())
            });

            $('#room1').click(function() {
                socket.emit('joinroom', '채팅방입장시켜줘')
            });

            $('#send').click(function() {
                socket.emit('user-send', $('#input1').val())
            });

            socket.on('broadcast', function(data) {
                $('#content').append('<div>' + data + '<div>');
            })
        </script>

